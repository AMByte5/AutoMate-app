
@{
    ViewData["Title"] = "AI Chat Assistant";
}

@Html.AntiForgeryToken()  @* Add this line *@


<style>
    body {
        background-color: #0d0d0d;
        color: #f9fafb;
    }

    .chat-container {
        background: #111827;
        border-radius: 16px;
        border: 1px solid #1f2937;
        height: 600px;
        display: flex;
        flex-direction: column;
    }

    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .message {
        max-width: 70%;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        word-wrap: break-word;
    }

    .message-user {
        background: #3b82f6;
        color: white;
        align-self: flex-end;
        margin-left: auto;
    }

    .message-assistant {
        background: #1f2937;
        color: #f9fafb;
        align-self: flex-start;
    }

    .chat-input-area {
        padding: 1rem;
        border-top: 1px solid #1f2937;
        display: flex;
        gap: 0.5rem;
    }

        .chat-input-area input {
            flex: 1;
            background: #020617;
            border: 1px solid #374151;
            color: #f9fafb;
            padding: 0.75rem;
            border-radius: 8px;
        }

            .chat-input-area input:focus {
                outline: none;
                border-color: #3b82f6;
            }

        .chat-input-area button {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            cursor: pointer;
        }

            .chat-input-area button:hover {
                background: #2563eb;
            }

            .chat-input-area button:disabled {
                background: #4b5563;
                cursor: not-allowed;
            }
</style>

<div class="container py-4">
    <h2 class="mb-4">🤖 AI Chat Assistant</h2>
    <p class="text-muted mb-4">Ask me anything about AutoMate_app, car problems, or roadside assistance!</p>

    <div class="chat-container">
        <div class="chat-messages" id="chatMessages">
            <div class="message message-assistant">
                👋 Hello! I'm your AI assistant. How can I help you today?
            </div>
        </div>

        <div class="chat-input-area">
            <input type="text"
                   id="userInput"
                   placeholder="Type your message here..."
                   autocomplete="off" />
            <button type="button" id="sendButton" onclick="sendMessage()">Send</button>
        </div>
    </div>
</div>

<script>
    const chatMessages = document.getElementById('chatMessages');
    const userInput = document.getElementById('userInput');
    const sendButton = document.getElementById('sendButton');
    let conversationHistory = [];

    // Get anti-forgery token once
    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

    function addMessage(content, isUser) {
        const messageDiv = document.createElement('div');
        messageDiv.className = `message ${isUser ? 'message-user' : 'message-assistant'}`;
        messageDiv.textContent = content;
        chatMessages.appendChild(messageDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    async function sendMessage() {
        const message = userInput.value.trim();
        if (!message) return;

        // Disable input while processing
        userInput.disabled = true;
        sendButton.disabled = true;
        sendButton.textContent = 'Sending...';

        // Add user message to UI
        addMessage(message, true);
        userInput.value = '';

        try {
            const response = await fetch('/Chat/SendMessage', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token  // Use the token variable
                },
                body: JSON.stringify({
                    message: message,
                    history: conversationHistory
                })
            });

            const data = await response.json();

            if (data.success) {
                addMessage(data.response, false);
                // Update conversation history
                conversationHistory.push({ role: 'user', content: message });
                conversationHistory.push({ role: 'assistant', content: data.response });
            } else {
                addMessage('Sorry, I encountered an error. Please try again.', false);
            }
        } catch (error) {
            console.error('Error:', error);
            addMessage('Sorry, something went wrong. Please try again.', false);
        } finally {
            // Re-enable input
            userInput.disabled = false;
            sendButton.disabled = false;
            sendButton.textContent = 'Send';
            userInput.focus();
        }
    }

    // Allow Enter key to send
    userInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            sendMessage();
        }
    });
</script>