@model AutoMate_app.Models.RoleVM

@{
    ViewData["Title"] = "Delete Role";
}

<h2 class="text-danger">Delete Role</h2>

<h4>Are you sure you want to delete this role?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Role Name</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
