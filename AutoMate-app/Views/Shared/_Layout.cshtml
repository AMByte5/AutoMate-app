            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.10);
            color: hsl(210 40% 96%);
            font-weight: 600;
            font-size: 0.9375rem;
            max-width: 260px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .am-auth-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 14px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 700;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
            border: 1px solid rgba(255, 255, 255, 0.10);
            background: rgba(255, 255, 255, 0.05);
            color: hsl(210 40% 96%);
        }

            .am-auth-btn:hover {
                background: rgba(255, 255, 255, 0.10);
                color: hsl(210 40% 98%);
            }

            .am-auth-btn.primary {
                background: rgba(59, 130, 246, 0.12);
                border-color: rgba(59, 130, 246, 0.25);
                color: hsl(217 91% 70%);
            }

                .am-auth-btn.primary:hover {
                    background: rgba(59, 130, 246, 0.18);
                    color: hsl(217 91% 78%);
                }

        .am-logout-btn {
            cursor: pointer;
        }

        /* =========================
           FIX 1024px – 1132px NAVBAR
           ========================= */

        /* 1) Let the center nav take remaining space and shrink gracefully */
        @@media (min-width: 1024px) {
            .am-navbar-inner

        {
            justify-content: flex-start; /* instead of space-between */
        }

        .am-logo {
            flex: 0 0 auto;
        }

        .am-nav-links {
            flex: 1 1 auto; /* this is the key */
            min-width: 0; /* allows flex children to shrink */
            justify-content: center; /* keep centered like before */
            gap: 6px; /* slightly tighter */
        }

        .am-nav-actions {
            margin-left: auto; /* push actions to the far right */
            flex: 0 0 auto;
        }

        .am-auth {
            flex: 0 0 auto;
            min-width: 0;
        }

        }

        /* 2) In the “tight” range, slightly compress spacing/padding */
        @@media (min-width: 1024px) and (max-width: 1132px) {
            .am-navbar-inner

        {
            padding: 0 16px; /* was 24px */
            gap: 14px; /* was 24px */
        }

        .am-nav-link {
            padding: 8px 12px; /* was 10px 16px */
            font-size: 0.9rem;
        }

        .am-user-pill {
            max-width: 160px; /* was 260px (this prevents overflow) */
        }

        .am-auth-btn {
            padding: 8px 12px; /* was 10px 14px */
            font-size: 0.9rem;
        }

        }

        /* 3) Optional safety: prevent any flex item from causing overflow */
        .am-navbar-inner > * {
            min-width: 0;
        }

    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="am-navbar">
        <div class="am-navbar-inner">
            <!-- Logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="am-logo">
                
                <div class="am-logo-text">AutoMate</div>
            
            </a>


            <!-- Desktop Navigation -->
            <ul class="am-nav-links">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="am-nav-link">
                        <span class="nav-icon">⌂</span>
                        Home
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="ServiceRequests" asp-action="Index" class="am-nav-link">
                        <span class="nav-icon">⇄</span>
                        Requests
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="MechanicProfiles" asp-action="Index" class="am-nav-link">
                        <span class="nav-icon">🔧</span>
                        Mechanics
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Reviews" asp-action="Index" class="am-nav-link">
                        <span class="nav-icon">☆<span>
                        Reviews
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="UserProfiles" asp-action="MyProfile" class="am-nav-link">
                        <span class="nav-icon">◉</span>
                        My Profile
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Chat" asp-action="Index" class="am-nav-link chat-link">
                        <span class="nav-icon">💬</span>
                        Chat
                    </a>
                </li>

                @* Admin Dropdown *@
                @if (User.IsInRole("Admin"))
                {
                    <li class="am-dropdown">
                        <div class="am-dropdown-toggle">
                            <span>🛡️</span>
                            Admin
                        </div>
                        <ul class="am-dropdown-menu">
                            <li>
                                <a asp-area="" asp-controller="Role" asp-action="Index" class="am-dropdown-item">
                                    <span class="item-icon">👥</span>
                                    Roles
                                </a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Assign" asp-action="Index" class="am-dropdown-item">
                                    <span class="item-icon">🎯</span>
                                    Assign Roles
                                </a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="ServiceTypes" asp-action="Index" class="am-dropdown-item">
                                    <span class="item-icon">⚙️</span>
                                    Service Types
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>

            <!-- Right Actions -->
            <div class="am-nav-actions">

                <!-- Auth (Desktop) -->
                <div class="am-auth">
                    @if (SignInManager.IsSignedIn(User))
                    {
                         
                        <span class="am-user-pill" title="@User.Identity?.Name">
                            <span>👤</span>
                            @User.Identity?.Name
                        </span>

                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="m-0">
                            <button type="submit" class="am-auth-btn am-logout-btn">
                                <span>🚪</span>
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="am-auth-btn">
                            <span>🔑</span>
                            Login
                        </a>

                        <a asp-area="Identity" asp-page="/Account/Register" class="am-auth-btn primary">
                            <span>✨</span>
                            Register
                        </a>
                    }
                </div>

                <!-- Mobile Toggle -->
                <button class="am-mobile-toggle" id="mobileToggle" onclick="toggleMobileMenu()">
                    <span></span>
                </button>
            </div>

        </div>
    </nav>

    <!-- Mobile Menu -->
    <div class="am-mobile-menu" id="mobileMenu">
        <ul class="am-mobile-nav">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="am-mobile-nav-link">
                    <span>🏠</span>
                    Home
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="ServiceRequests" asp-action="Index" class="am-mobile-nav-link">
                    <span>📋</span>
                    Requests
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="MechanicProfiles" asp-action="Index" class="am-mobile-nav-link">
                    <span>🔧</span>
                    Mechanics
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Reviews" asp-action="Index" class="am-mobile-nav-link">
                    <span>⭐</span>
                    Reviews
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="UserProfiles" asp-action="MyProfile" class="am-mobile-nav-link">
                    <span>👤</span>
                    My Profile
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Chat" asp-action="Index" class="am-mobile-nav-link chat-link">
                    <span>💬</span>
                    Chat
                </a>
            </li>


            @* Admin Section *@
            @if (User.IsInRole("Admin"))
            {
                <div class="am-mobile-divider"></div>
                <div class="am-mobile-section-title">🛡️ Admin Panel</div>
                <li>
                    <a asp-area="" asp-controller="Roles" asp-action="Index" class="am-mobile-nav-link">
                        <span>👥</span>
                        Roles
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Roles" asp-action="Assign" class="am-mobile-nav-link">
                        <span>🎯</span>
                        Assign Roles
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="ServiceTypes" asp-action="Index" class="am-mobile-nav-link">
                        <span>⚙️</span>
                        Service Types
                    </a>
                </li>
            }

            <div class="am-mobile-divider"></div>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="am-mobile-section-title">Account</div>

                <li>
                    <div class="am-mobile-nav-link" style="cursor: default;">
                        <span>👤</span>
                        <span style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                            @User.Identity?.Name
                        </span>
                    </div>
                </li>

                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="m-0">
                        <button type="submit" class="am-mobile-nav-link" style="width:100%; text-align:left;">
                            <span>🚪</span>
                            Logout
                        </button>
                    </form>
                </li>
            }
            else
            {
                <div class="am-mobile-section-title">Account</div>

                <li>
                    <a asp-area="Identity" asp-page="/Account/Login" class="am-mobile-nav-link">
                        <span>🔑</span>
                        Login
                    </a>
                </li>

                <li>
                    <a asp-area="Identity" asp-page="/Account/Register" class="am-mobile-nav-link">
                        <span>✨</span>
                        Register
                    </a>
                </li>
            }

        </ul>
    </div>

    <!-- Main Content -->
    <main class="am-main-content">
        <div>
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="am-footer">
        <div class="am-footer-inner">
            <span class="am-footer-text">© 2025 - AutoMate_app</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="am-footer-link">
                Privacy
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleMobileMenu() {
            const toggle = document.getElementById('mobileToggle');
            const menu = document.getElementById('mobileMenu');
            toggle.classList.toggle('active');
            menu.classList.toggle('active');
            document.body.style.overflow = menu.classList.contains('active') ? 'hidden' : '';
        }

        // Close mobile menu on link click
        document.querySelectorAll('.am-mobile-nav-link').forEach(link => {
            link.addEventListener('click', () => {
                document.getElementById('mobileToggle').classList.remove('active');
                document.getElementById('mobileMenu').classList.remove('active');
                document.body.style.overflow = '';
            });
        });

        // Close on resize to desktop
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 992) {
                document.getElementById('mobileToggle').classList.remove('active');
                document.getElementById('mobileMenu').classList.remove('active');
                document.body.style.overflow = '';
            }
        });
    </script>
</body>
</html>
