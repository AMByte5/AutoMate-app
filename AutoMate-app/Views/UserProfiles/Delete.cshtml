@model AutoMate_app.Models.UserProfile
@{
    ViewData["Title"] = "Delete Profile";
}

<style>
    body {
        background-color: #0f0f0f;
        color: #f5f5f5;
    }

    .delete-card {
        background: #1a1a1a;
        border-radius: 12px;
        border: 1px solid #2a2a2a;
    }
</style>

<div class="delete-card p-4 shadow">
    <h2 class="text-danger">Delete Profile</h2>
    <p class="text-muted">You are about to permanently delete this profile. This action cannot be undone.</p>

    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>