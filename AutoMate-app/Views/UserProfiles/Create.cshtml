@model AutoMate_app.Models.UserProfile
@{
    ViewData["Title"] = "Create Profile";
}

<style>
    body {
        background-color: #121212;
        color: #f0f0f0;
    }

    .form-card {
        background: #1b1b1b;
        border-radius: 18px;
        border: 1px solid #2b2b2b;
    }

    .form-control, .form-select {
        background-color: #262626;
        border: 1px solid #3a3a3a;
        color: #f1f1f1;
    }

        .form-control:focus, .form-select:focus {
            background-color: #2f2f2f;
            border-color: #4e9cff;
            color: #fff;
        }

    .label-text {
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .06em;
        color: #9f9f9f;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="form-card p-4 shadow-lg">
            <h2 class="mb-4">Complete Your Profile</h2>
            <p class="text-muted mb-4">Tell us about yourself to unlock personalized service and faster bookings.</p>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="FullName" class="label-text"></label>
                    <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="label-text"></label>
                    <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="label-text"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1 (555) 123-4567" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="label-text"></label>
                    <input asp-for="City" class="form-control" placeholder="New York" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="label-text"></label>
                    <textarea asp-for="Address" class="form-control" rows="3" placeholder="123 Main Street"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4">Save Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}