<div class="am-shell">
    <div class="am-bg">
        <div class="orb"></div>
    </div>

    <div class="am-container">
        <!-- Header -->
        <div class="am-header">
            <h1 class="am-title">Create Request</h1>
            <p class="am-subtitle">
                Submit with the right category, a clear description, and your location for faster response.
            </p>
            <hr class="am-divider" />
        </div>

        <!-- Info Panel -->
        <div class="glass-card">
            <div class="brand-bar">
                <div class="brand-mark">
                    <img src="~/images/automate-hero.png" alt="AutoMate" />
                </div>
                <div>
                    <div class="brand-name">AutoMate_application</div>
                    <div class="brand-sub">YOUR POWERED MATE</div>
                </div>
            </div>

            <h2 class="info-headline">Welcome back</h2>
            <p class="info-desc">
                Log in to request roadside help, manage your profile, and chat with mechanics in real time.
            </p>

            <div class="tips-grid">
                <div class="tips-row">
                    <div class="tip-card">
                        <div class="tip-header">
                            <div class="tip-icon">✅</div>
                            <div class="tip-title">What to include</div>
                        </div>
                        <div class="tip-text">
                            Symptoms, when it happens, how severe it is, and any recent changes (repair/oil/battery).
                        </div>
                    </div>

                    <div class="tip-card">
                        <div class="tip-header">
                            <div class="tip-icon">🧭</div>
                            <div class="tip-title">Good structure</div>
                        </div>
                        <div class="tip-text">
                            Symptom → When → Severity → Recent change. Simple and mechanic-ready.
                        </div>
                    </div>
                </div>

                <div class="tip-card">
                    <div class="tip-header">
                        <div class="tip-icon">📝</div>
                        <div class="tip-title">Quick examples</div>
                    </div>

                    <div class="example-group">
                        <div>
                            <span class="chip chip-good">✓ Good</span>
                            <div class="quote-box">
                                Car won't start. One click sound. <strong>Battery light</strong> was on yesterday. Happens after parking overnight.
                            </div>
                        </div>

                        <div>
                            <span class="chip chip-bad">✗ Bad</span>
                            <div class="quote-box">
                                My car is broken.
                            </div>
                        </div>

                        
                    </div>
                </div>
            </div>

            <div class="feature-pills">
                <span class="feature-pill">AI-powered suggestions</span>
                <span class="feature-pill">Faster diagnosis</span>
                <span class="feature-pill">Location-aware dispatch</span>
            </div>
        </div>

        <!-- Form Card -->
        <div class="glass-card">
            <h2 class="form-card-title">Create Service Request</h2>
            <p class="form-card-sub">Fill in the details below to get help.</p>

            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Service Type -->
                <div class="form-group">
                    <label asp-for="ServiceTypeId" class="form-label"></label>
                    <select asp-for="ServiceTypeId" class="glass-select">
                        <option value="">-- Select a service type --</option>
                        @{
                            var items = (IEnumerable<dynamic>)ViewBag.ServiceTypeGrouped;
                            foreach (var group in items.GroupBy(i => (string)i.Group))
                            {
                                <optgroup label="@group.Key">
                                    @foreach (var item in group)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </optgroup>
                            }
                        }
                    </select>
                    <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                </div>

                <!-- Problem Description -->
                <div class="form-group">
                    <label asp-for="ProblemDescription" class="form-label"></label>
                    <textarea asp-for="ProblemDescription"
                              class="glass-textarea"
                              rows="4"
                              placeholder="Example: Car won't start, one click sound, battery light was on yesterday..."></textarea>
                    <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                </div>

                <!-- Location -->
                <div class="form-group">
                    <label asp-for="LocationAddress" class="form-label">Location</label>
                    <div class="location-group">
                        <input asp-for="LocationAddress"
                               class="glass-input"
                               placeholder="Street, city, or landmark"
                               id="locationAddress" />
                        <button type="button"
                                class="btn-secondary btn-location"
                                onclick="getCurrentLocation()"
                                id="locationBtn">
                            📍 Use My Location
                        </button>
                    </div>
                    <span asp-validation-for="LocationAddress" class="text-danger"></span>
                    <div id="locationStatus" class="location-status"></div>
                </div>

                <!-- Hidden coordinates -->
                <input type="hidden" asp-for="LocationLatitude" id="locationLatitude" />
                <input type="hidden" asp-for="LocationLongitude" id="locationLongitude" />

                <div class="btn-group">
                    <button type="submit" class="btn-primary">Create Request</button>
                    <a asp-action="Index" class="btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const googleMapsApiKey = '@googleMapsKey';
        const locationAddressInput = document.getElementById('locationAddress');
        const locationLatInput = document.getElementById('locationLatitude');
        const locationLonInput = document.getElementById('locationLongitude');
        const locationStatus = document.getElementById('locationStatus');
        const locationBtn = document.getElementById('locationBtn');

        function getCurrentLocation() {
            if (!navigator.geolocation) {
                showLocationError('Geolocation is not supported by this browser.');
                return;
            }

            locationBtn.disabled = true;
            locationBtn.textContent = '📍 Getting location...';
            locationStatus.className = 'location-status loading';
            locationStatus.textContent = 'Fetching location...';
            locationAddressInput.value = '';
            locationAddressInput.disabled = true;

            navigator.geolocation.getCurrentPosition(
                async function (position) {
                    const latitude = position.coords.latitude;
                    const longitude = position.coords.longitude;
                    const accuracy = position.coords.accuracy;

                    locationLatInput.value = latitude;
                    locationLonInput.value = longitude;

                    locationStatus.className = 'location-status loading';
                    locationStatus.textContent = `📍 Coordinates: ${latitude.toFixed(6)}, ${longitude.toFixed(6)} (Accuracy: ${Math.round(accuracy)}m) - Getting address...`;

                    const geocodingUrl = `https://maps.googleapis.com/maps/api/geocode/json?latlng=${latitude},${longitude}&key=${googleMapsApiKey}`;

                    try {
                        const response = await fetch(geocodingUrl);
                        const data = await response.json();

                        if (data.status === 'OK' && data.results.length > 0) {
                            const address = data.results[0].formatted_address;
                            locationAddressInput.value = address;
                            locationStatus.className = 'location-status success';
                            locationStatus.textContent = `✅ Location found: ${address}`;
                        } else {
                            locationAddressInput.value = `${latitude.toFixed(6)}, ${longitude.toFixed(6)}`;
                            locationStatus.className = 'location-status error';
                            locationStatus.textContent = `⚠️ Unable to retrieve address. Using coordinates.`;
                        }
                    } catch (error) {
                        locationAddressInput.value = `${latitude.toFixed(6)}, ${longitude.toFixed(6)}`;
                        locationStatus.className = 'location-status error';
                        locationStatus.textContent = `⚠️ Geocoding failed. Using coordinates: ${latitude.toFixed(6)}, ${longitude.toFixed(6)}`;
                    } finally {
                        locationAddressInput.disabled = false;
                        locationBtn.disabled = false;
                        locationBtn.textContent = '📍 Use My Location';
                    }
                },
                function (error) {
                    let errorMessage = 'Unable to get your location.';

                    switch (error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage = 'Location access denied. Please enable location permissions.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage = 'Location information unavailable.';
                            break;
                        case error.TIMEOUT:
                            errorMessage = 'Location request timed out.';
                            break;
                    }

                    showLocationError(errorMessage);
                    locationBtn.disabled = false;
                    locationBtn.textContent = '📍 Use My Location';
                }
            );
        }

        function showLocationError(message) {
            locationStatus.className = 'location-status error';
            locationStatus.textContent = `❌ ${message}`;
            locationAddressInput.disabled = false;
        }
    </script>
}
