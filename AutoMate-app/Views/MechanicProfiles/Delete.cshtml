@model AutoMate_app.Models.MechanicProfile

@{
    ViewData["Title"] = "Delete Mechanic Profile";
}

<style>
    body {
        background: #0b0b0b;
        color: #f0f0f0;
    }

    .delete-card {
        background: #181818;
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid #252525;
    }
</style>

<div class="delete-card">
    <h2 class="text-danger">Delete Mechanic Profile</h2>
    <p class="text-muted">This action permanently removes the mechanic’s information from the platform.</p>

    <dl class="row">
        <dt class="col-sm-3">Garage</dt>
        <dd class="col-sm-9">@Model.GarageName</dd>

        <dt class="col-sm-3">Specialization</dt>
        <dd class="col-sm-9">@Model.Specialization</dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.AverageRating.ToString("0.0") / 5 (@Model.TotalReviews reviews)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.IsVerifiedByAdmin ? "bg-success" : "bg-warning text-dark")">
                @(Model.IsVerifiedByAdmin ? "Verified" : "Pending")
            </span>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>