@{
    ViewData["Title"] = "AutoMate_app – Smart Roadside Assistance";
}

<style>
    /* =========================
           BASE & ANIMATED BACKGROUND
           ========================= */
    .am-home {
        min-height: calc(100vh - 72px);
        position: relative;
        overflow: hidden;
        color: hsl(210 40% 96%);
        font-family: 'Inter', system-ui, sans-serif;
    }

    .am-bg-animated {
        position: fixed;
        inset: 0;
        background: linear-gradient(135deg, hsl(222 47% 5%) 0%, hsl(222 47% 8%) 50%, hsl(230 40% 6%) 100%);
        z-index: 0;
    }

        .am-bg-animated::before {
            content: '';
            position: absolute;
            width: 150%;
            height: 150%;
            top: -25%;
            left: -25%;
            background: radial-gradient(ellipse 600px 400px at 20% 30%, hsla(217, 91%, 55%, 0.15), transparent 50%), radial-gradient(ellipse 500px 500px at 80% 20%, hsla(280, 80%, 50%, 0.08), transparent 50%), radial-gradient(ellipse 700px 500px at 70% 80%, hsla(160, 84%, 39%, 0.1), transparent 50%), radial-gradient(ellipse 400px 400px at 10% 90%, hsla(217, 91%, 60%, 0.12), transparent 50%);
            animation: bgFloat 20s ease-in-out infinite;
        }

    @@keyframes bgFloat {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(30px, -20px) rotate(1deg);
        }

        66% {
            transform: translate(-20px, 20px) rotate(-1deg);
        }
    }

    /* Floating particles */
    .particles {
        position: fixed;
        inset: 0;
        overflow: hidden;
        z-index: 1;
        pointer-events: none;
    }

    .particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: hsla(217, 91%, 60%, 0.4);
        border-radius: 50%;
        animation: particleFloat 15s infinite;
    }

        .particle:nth-child(1) {
            left: 10%;
            top: 20%;
            animation-delay: 0s;
            animation-duration: 20s;
        }

        .particle:nth-child(2) {
            left: 20%;
            top: 80%;
            animation-delay: 2s;
            animation-duration: 18s;
        }

        .particle:nth-child(3) {
            left: 35%;
            top: 40%;
            animation-delay: 4s;
            animation-duration: 22s;
        }

        .particle:nth-child(4) {
            left: 50%;
            top: 60%;
            animation-delay: 1s;
            animation-duration: 16s;
        }

        .particle:nth-child(5) {
            left: 65%;
            top: 25%;
            animation-delay: 3s;
            animation-duration: 19s;
        }

        .particle:nth-child(6) {
            left: 80%;
            top: 70%;
            animation-delay: 5s;
            animation-duration: 21s;
        }

        .particle:nth-child(7) {
            left: 90%;
            top: 45%;
            animation-delay: 2.5s;
            animation-duration: 17s;
        }

        .particle:nth-child(8) {
            left: 5%;
            top: 55%;
            animation-delay: 1.5s;
            animation-duration: 23s;
        }

    @@keyframes particleFloat {
        0%, 100% {
            transform: translateY(0) scale(1);
            opacity: 0.4;
        }

        50% {
            transform: translateY(-100px) scale(1.5);
            opacity: 0.8;
        }
    }

    /* =========================
           LAYOUT
           ========================= */
    .am-content {
        position: relative;
        z-index: 2;
    }

    .am-container {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 16px;
    }

    @@media (min-width: 768px) {
        .am-container {
            padding: 0 24px;
        }
    }

    @@media (min-width: 1024px) {
        .am-container {
            max-width: 1100px;
            padding: 0 32px;
        }
    }

    /* =========================
           HERO SECTION
           ========================= */
    .hero-section {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        padding: 60px 0;
    }

    .hero-grid {
        display: grid;
        gap: 48px;
        align-items: center;
    }

    @@media (min-width: 1024px) {
        .hero-grid {
            grid-template-columns: 1fr 1fr;
            gap: 64px;
        }
    }

    .hero-content {
        text-align: center;
    }

    @@media (min-width: 1024px) {
        .hero-content {
            text-align: left;
        }
    }

    /* Animated badge */
    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(139, 92, 246, 0.15));
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
        color: hsl(217 91% 70%);
        margin-bottom: 24px;
        animation: badgePulse 3s ease-in-out infinite;
    }

        .hero-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            background: hsl(160 84% 50%);
            border-radius: 50%;
            animation: blink 2s infinite;
        }

    @@keyframes badgePulse {
        0%, 100% {
            box-shadow: 0 0 20px rgba(59, 130, 246, 0.2);
        }

        50% {
            box-shadow: 0 0 40px rgba(59, 130, 246, 0.4);
        }
    }

    @@keyframes blink {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.4;
        }
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 900;
        line-height: 1.1;
        margin: 0 0 24px;
        letter-spacing: -1px;
    }

    @@media (min-width: 768px) {
        .hero-title {
            font-size: 3.5rem;
        }
    }

    @@media (min-width: 1024px) {
        .hero-title {
            font-size: 4rem;
        }
    }

    .hero-title-gradient {
        background: linear-gradient( 135deg, hsl(200 90% 55%), /* cyan */
        hsl(215 85% 60%), /* blue */
        hsl(210 10% 70%) /* soft grey */
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-desc {
        font-size: 1.125rem;
        line-height: 1.7;
        color: hsl(215 20% 65%);
        margin-bottom: 32px;
        max-width: 520px;
    }

    @@media (min-width: 1024px) {
        .hero-desc {
            margin-left: 0;
            margin-right: auto;
        }
    }

    /* CTA Buttons */
    .hero-cta {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    @@media (min-width: 480px) {
        .hero-cta {
            flex-direction: row;
            justify-content: center;
        }
    }

    @@media (min-width: 1024px) {
        .hero-cta {
            justify-content: flex-start;
        }
    }

    .btn-glow {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 16px 32px;
        font-size: 1rem;
        font-weight: 700;
        border-radius: 14px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }

    .btn-glow-primary {
        background: linear-gradient(
  135deg,
  hsl(200 90% 55%),   /* cyan */
  hsl(215 85% 60%),   /* blue */
  hsl(210 10% 70%)    /* soft grey */
);

        color: white;
        box-shadow: 0 20px 40px -10px rgba(59, 130, 246, 0.4);
    }

        .btn-glow-primary::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, hsl(217 91% 60%), hsl(280 70% 65%));
            opacity: 0;
            transition: opacity 0.3s;
        }

        .btn-glow-primary:hover::before {
            opacity: 1;
        }

        .btn-glow-primary span {
            position: relative;
            z-index: 1;
        }

        .btn-glow-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 25px 50px -10px rgba(59, 130, 246, 0.5);
        }

    .btn-glow-secondary {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: hsl(210 40% 96%);
        backdrop-filter: blur(10px);
    }

        .btn-glow-secondary:hover {
            background: rgba(255, 255, 255, 0.4);
            border-color: rgba(255, 255, 255, 0.25);
            transform: translateY(-2px);
        }

    /* Hero Visual */
    .hero-visual {
        position: relative;
        display: flex;
        justify-content: center;
    }

    .hero-card-3d {
        position: relative;
        perspective: 1000px;
    }

    .hero-main-card {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.02));
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 24px;
        padding: 32px;
        backdrop-filter: blur(20px);
        transform: rotateY(-5deg) rotateX(5deg);
        transition: transform 0.5s ease;
        box-shadow: 0 50px 100px -20px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05) inset;
    }

    .hero-card-3d:hover .hero-main-card {
        transform: rotateY(0) rotateX(0);
    }

    .hero-logo-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        margin-bottom: 24px;
    }

    /* .hero-logo-icon {
        width: 202px;
        height: 202px;
        background: linear-gradient(135deg, hsl(217 91% 50%), hsl(217 91% 40%));
        border-radius: 20px;
        display: grid;
        place-items: center;
        box-shadow: 0 20px 40px -10px rgba(59, 130, 246, 0.4);
    } */

        .hero-logo-icon img {
            width: 180px;
            height: 180px;
            object-fit: contain;
		border-radius: 16px;
        margin-bottom: 50px;
        }

    .hero-logo-text {
        font-size: 2rem;
        font-weight: 900;
        background: linear-gradient(135deg, hsl(217 91% 65%), hsl(210 40% 96%));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }

    .hero-stat {
        text-align: center;
        padding: 16px 8px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .hero-stat-value {
        font-size: 1.5rem;
        font-weight: 800;
        color: hsl(217 91% 70%);
    }

    .hero-stat-label {
        font-size: 0.75rem;
        color: hsl(215 20% 55%);
        margin-top: 4px;
    }

    /* Floating badges around card */
    .floating-badge {
        position: absolute;
        padding: 10px 16px;
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        font-size: 0.875rem;
        font-weight: 600;
        white-space: nowrap;
        animation: floatBadge 6s ease-in-out infinite;
    }

    .floating-badge-1 {
        top: 10%;
        right: -20px;
        animation-delay: 0s;
    }

    .floating-badge-2 {
        bottom: 32%;
        left: -30px;
        animation-delay: 2s;
    }

    .floating-badge-3 {
        top: 45%;
        right: -40px;
        animation-delay: 4s;
    }

    @@keyframes floatBadge {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .badge-icon {
        margin-right: 6px;
		
    }

    /* =========================
           FEATURES SECTION
           ========================= */
    .features-section {
        padding: 80px 0;
    }

    .section-header {
        text-align: center;
        margin-bottom: 48px;
    }

    .section-label {
        display: inline-block;
        padding: 6px 14px;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: hsl(217 91% 70%);
        margin-bottom: 16px;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 16px;
    }

    @@media (min-width: 768px) {
        .section-title {
            font-size: 2.5rem;
        }
    }

    .section-desc {
        color: hsl(215 20% 60%);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }

    .features-grid {
        display: grid;
        gap: 20px;
    }

    @@media (min-width: 768px) {
        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 1024px) {
        .features-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .feature-card {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.06), rgba(255, 255, 255, 0.02));
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 28px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, hsl(217 91% 55%), transparent);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            border-color: rgba(59, 130, 246, 0.3);
            box-shadow: 0 30px 60px -20px rgba(0, 0, 0, 0.4);
        }

            .feature-card:hover::before {
                opacity: 1;
            }

    .feature-icon {
        width: 56px;
        height: 56px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .feature-icon-ai {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(139, 92, 246, 0.05));
        border: 1px solid rgba(139, 92, 246, 0.3);
    }

    .feature-icon-match {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.05));
        border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .feature-icon-maps {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(59, 130, 246, 0.05));
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .feature-icon-speed {
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.2), rgba(251, 191, 36, 0.05));
        border: 1px solid rgba(251, 191, 36, 0.3);
    }

    .feature-icon-secure {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(239, 68, 68, 0.05));
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .feature-icon-support {
        background: linear-gradient(135deg, rgba(34, 211, 238, 0.2), rgba(34, 211, 238, 0.05));
        border: 1px solid rgba(34, 211, 238, 0.3);
    }

    .feature-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0 0 12px;
    }

    .feature-desc {
        color: hsl(215 20% 65%);
        font-size: 0.9375rem;
        line-height: 1.6;
        margin: 0;
    }

        .feature-desc strong {
            color: hsl(210 40% 90%);
        }

    /* =========================
           HOW IT WORKS SECTION
           ========================= */
    .how-section {
        padding: 80px 0;
    }

    .steps-container {
        display: grid;
        gap: 24px;
    }

    @@media (min-width: 768px) {
        .steps-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 1024px) {
        .steps-container {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .step-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 28px;
        text-align: center;
        position: relative;
        transition: all 0.3s ease;
    }

        .step-card:hover {
            background: rgba(255, 255, 255, 0.06);
            transform: translateY(-4px);
        }

    .step-number {
        width: 48px;
        height: 48px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, hsl(217 91% 50%), hsl(280 70% 55%));
        border-radius: 14px;
        display: grid;
        place-items: center;
        font-size: 1.25rem;
        font-weight: 800;
        color: white;
    }

    .step-title {
        font-size: 1.125rem;
        font-weight: 700;
        margin: 0 0 10px;
    }

    .step-desc {
        color: hsl(215 20% 60%);
        font-size: 0.9375rem;
        line-height: 1.6;
        margin: 0;
    }

    /* Connector line */
    @@media (min-width: 1024px) {
        .step-card:not(:last-child)::after {
            content: '';
            position: absolute;
            top: 48px;
            right: -12px;
            width: 24px;
            height: 2px;
            background: linear-gradient(90deg, rgba(59, 130, 246, 0.5), transparent);
        }
    }

    /* =========================
           CTA SECTION
           ========================= */
    .cta-section {
        padding: 80px 0 100px;
    }

    .cta-card {
        background: linear-gradient(145deg, rgba(59, 130, 246, 0.15), rgba(139, 92, 246, 0.08));
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 28px;
        padding: 48px 32px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .cta-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
        }

    .cta-title {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 16px;
    }

    @@media (min-width: 768px) {
        .cta-title {
            font-size: 2.5rem;
        }
    }

    .cta-desc {
        color: hsl(215 20% 70%);
        font-size: 1.125rem;
        max-width: 500px;
        margin: 0 auto 32px;
        line-height: 1.7;
    }

    .cta-buttons {
        display: flex;
        flex-direction: column;
        gap: 12px;
        justify-content: center;
    }

    @@media (min-width: 480px) {
        .cta-buttons {
            flex-direction: row;
        }
    }

    /* Tech Stack Pills */
    .tech-stack {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-top: 40px;
        padding-top: 32px;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
    }

    .tech-pill {
        padding: 8px 16px;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 9999px;
        font-size: 0.8125rem;
        font-weight: 500;
        color: hsl(215 20% 70%);
    }


</style>

