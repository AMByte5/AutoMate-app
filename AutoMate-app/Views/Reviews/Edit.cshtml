@model AutoMate_app.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<h1>Edit Review</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ServiceRequestId" />
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="form-group mb-3">
                <label class="form-label">Service Request ID</label>
                <input type="text" class="form-control" value="@Model.ServiceRequestId" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label">Rating (1-5)</label>
                <select asp-for="Rating" class="form-control">
                    <option value="1" selected="@(Model.Rating == 1)">1 Star</option>
                    <option value="2" selected="@(Model.Rating == 2)">2 Stars</option>
                    <option value="3" selected="@(Model.Rating == 3)">3 Stars</option>
                    <option value="4" selected="@(Model.Rating == 4)">4 Stars</option>
                    <option value="5" selected="@(Model.Rating == 5)">5 Stars</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Write your review here..."></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Created At</label>
                <input type="text" class="form-control" value="@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}