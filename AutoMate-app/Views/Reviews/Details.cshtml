@model AutoMate_app.Models.Review

@{
    ViewData["Title"] = "Review Details";
}

<h1>Review Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @for (int i = 1; i <= 5; i++)
            {
                if (i <= Model.Rating)
                {
                    <span class="text-warning" style="font-size: 1.5em;">★</span>
                }
                else
                {
                    <span class="text-muted" style="font-size: 1.5em;">☆</span>
                }
            }
            <span class="ms-2">(@Model.Rating out of 5)</span>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrEmpty(Model.Comment))
            {
                <span class="text-muted">No comment provided</span>
            }
            else
            {
                @Model.Comment
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
        </dd>

        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @if (Model.Client != null)
            {
                @Model.Client.Email
            }
            else
            {
                <span class="text-muted">N/A</span>
            }
        </dd>

        <dt class="col-sm-2">
            Service Request
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="ServiceRequests" asp-action="Details" asp-route-id="@Model.ServiceRequestId">
                Request #@Model.ServiceRequestId
            </a>
            @if (Model.ServiceRequest?.ServiceType != null)
            {
                <br />
                <small class="text-muted">Type: @Model.ServiceRequest.ServiceType.Name</small>
            }
        </dd>

        <dt class="col-sm-2">
            Mechanic
        </dt>
        <dd class="col-sm-10">
            @if (Model.ServiceRequest?.Mechanic != null)
            {
                @Model.ServiceRequest.Mechanic.Email
            }
            else
            {
                <span class="text-muted">Not assigned</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>