@model AutoMate_app.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this review?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @for (int i = 1; i <= 5; i++)
            {
                if (i <= Model.Rating)
                {
                    <span class="text-warning">★</span>
                }
                else
                {
                    <span class="text-muted">☆</span>
                }
            }
            <span class="ms-1">(@Model.Rating)</span>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrEmpty(Model.Comment))
            {
                <span class="text-muted">No comment</span>
            }
            else
            {
                @Model.Comment
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
        </dd>

        <dt class="col-sm-2">
            Service Request
        </dt>
        <dd class="col-sm-10">
            Request #@Model.ServiceRequestId
            @if (Model.ServiceRequest?.ServiceType != null)
            {
                <br />
                <small class="text-muted">@Model.ServiceRequest.ServiceType.Name</small>
            }
        </dd>

        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @if (Model.Client != null)
            {
                @Model.Client.Email
            }
            else
            {
                <span class="text-muted">N/A</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>