@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="am-login-page">
    <div class="am-login-bg"></div>

    <div class="container py-5">
        <div class="row align-items-center justify-content-center g-4">
            <!-- Left: brand / intro -->
            <div class="col-12 col-lg-6">
                <div class="am-brand pe-lg-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="am-logo1">
                            <!-- simple inline icon (no external deps) -->
                            <svg width="34" height="34" viewBox="0 0 24 24" fill="none">
                                <path d="M7 14l-2 2m14-2l2 2M7 10h10M6 14h12" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                <path d="M5 16l1-8a4 4 0 0 1 4-3h4a4 4 0 0 1 4 3l1 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div>
                            <div class="am-title">AutoMate_application</div>
                            <div class="am-subtitle">Sign in to continue</div>
                        </div>
                    </div>

                    <h1 class="am-headline mb-3">Welcome back</h1>
                    <p class="am-desc mb-4">
                        Log in to request roadside help, manage your profile, and chat with mechanics in real time.
                    </p>

                    <div class="d-flex flex-wrap gap-2">
                        <span class="am-pill">ASP.NET Core MVC</span>
                        <span class="am-pill">AI-powered suggestions</span>
                        <span class="am-pill">Location-aware</span>
                    </div>
                </div>
            </div>

            <!-- Right: login card -->
            <div class="col-12 col-lg-5">
                <div class="am-card">
                    <div class="am-card-header mb-3">
                        <div class="am-card-title">Log in</div>
                        <div class="am-card-hint">Use your email and password.</div>
                    </div>

                    <form id="account" method="post" class="am-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger am-alert" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label am-label"></label>
                            <div class="input-group am-input">
                                <span class="input-group-text am-addon">
                                    <!-- mail icon -->
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M4 6h16v12H4V6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                        <path d="m4 7 8 6 8-6" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                    </svg>
                                </span>
                                <input asp-for="Input.Email" class="form-control am-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label am-label"></label>
                            <div class="input-group am-input">
                                <span class="input-group-text am-addon">
                                    <!-- lock icon -->
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M7 11V8a5 5 0 0 1 10 0v3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        <path d="M6 11h12v9H6v-9Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                    </svg>
                                </span>
                                <input asp-for="Input.Password" class="form-control am-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                                <button type="button" class="btn am-eye" id="togglePwd" aria-label="Show password">
                                    <!-- eye icon -->
                                    <svg id="eyeIcon" width="18" height="18" viewBox="0 0 24 24" fill="none">
                                        <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7S2 12 2 12Z" stroke="currentColor" stroke-width="2" />
                                        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" stroke="currentColor" stroke-width="2" />
                                    </svg>
                                </button>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label am-check" asp-for="Input.RememberMe"></label>
                            </div>

                            <a id="forgot-password" asp-page="./ForgotPassword" class="am-link">
                                Forgot password?
                            </a>
                        </div>

                        <button id="login-submit" type="submit" class="btn am-btn w-100 mb-3">
                            Log in
                        </button>

                        <div class="am-divider my-3">
                            <span>New here?</span>
                        </div>

                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn am-btn-outline w-100">
                            Create an account
                        </a>
                    </form>

                    @* If you have external logins configured, keep the default section or add buttons here *@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const btn = document.getElementById("togglePwd");
            const pwd = document.getElementById("Input_Password");
            if (!btn || !pwd) return;

            btn.addEventListener("click", function () {
                const isPwd = pwd.getAttribute("type") === "password";
                pwd.setAttribute("type", isPwd ? "text" : "password");
                btn.setAttribute("aria-label", isPwd ? "Hide password" : "Show password");
            });
        })();
    </script>

    <style>
        /* Page shell */
        .am-login-page {
            min-height: calc(100vh - 64px);
            position: relative;
            color: #e8eefc;
        }

        .am-login-bg {
            position: absolute;
            inset: 0;
            background:
                radial-gradient(800px 400px at 15% 25%, rgba(59, 130, 246, .25), transparent 60%),
                radial-gradient(700px 350px at 85% 35%, rgba(16, 185, 129, .18), transparent 55%),
                radial-gradient(700px 500px at 60% 85%, rgba(99, 102, 241, .16), transparent 60%),
                linear-gradient(180deg, rgba(2, 6, 23, 1), rgba(3, 7, 18, 1));
            z-index: 0;
        }

        .am-login-page .container { position: relative; z-index: 1; }

        /* Brand */
        .am-logo1 {
            width: 44px; height: 44px;
            border-radius: 14px;
            display: grid; place-items: center;
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.10);
            box-shadow: 0 10px 30px rgba(0,0,0,.35);
            color: #60a5fa;
        }

        .am-title { font-weight: 800; font-size: 1.25rem; letter-spacing: .2px; }
        .am-subtitle { opacity: .75; margin-top: -2px; }

        .am-headline {
            font-size: 2.6rem;
            line-height: 1.05;
            font-weight: 800;
            letter-spacing: -.6px;
        }

        .am-desc { opacity: .85; max-width: 52ch; }

        .am-pill {
            font-size: .85rem;
            padding: .35rem .6rem;
            border-radius: 999px;
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.10);
            color: rgba(226, 232, 240, .95);
        }

        /* Card */
        .am-card {
            border-radius: 18px;
            padding: 26px;
            background: rgba(255, 255, 255, .06);
            border: 1px solid rgba(255, 255, 255, .12);
            box-shadow: 0 20px 60px rgba(0,0,0,.45);
            backdrop-filter: blur(10px);
        }

        .am-card-title { font-weight: 800; font-size: 1.3rem; }
        .am-card-hint { opacity: .75; font-size: .95rem; }

        .am-alert { background: rgba(220, 53, 69, .15); border-color: rgba(220, 53, 69, .35); }

        /* Inputs */
        .am-label { color: rgba(226,232,240,.9); font-weight: 600; }

        .am-input .am-addon {
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.10);
            color: rgba(226,232,240,.85);
        }

        .am-control {
            background: rgba(2, 6, 23, .35);
            border: 1px solid rgba(255,255,255,.10);
            color: rgba(226,232,240,.95);
            padding: .75rem .9rem;
        }

        .am-control::placeholder { color: rgba(226,232,240,.55); }

        .am-control:focus {
            background: rgba(2, 6, 23, .45);
            border-color: rgba(59,130,246,.55);
            box-shadow: 0 0 0 .25rem rgba(59,130,246,.18);
            color: rgba(226,232,240,.95);
        }

        .am-eye {
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.10);
            color: rgba(226,232,240,.85);
        }

        .am-check { color: rgba(226,232,240,.85); }

        .am-link {
            color: rgba(147, 197, 253, .95);
            text-decoration: none;
        }
        .am-link:hover { text-decoration: underline; color: rgba(191, 219, 254, 1); }

        /* Buttons */
        .am-btn {
            padding: .85rem 1rem;
            border-radius: 14px;
            font-weight: 700;
            border: 1px solid rgba(59,130,246,.35);
            background: linear-gradient(90deg, rgba(37,99,235,1), rgba(59,130,246,1));
            box-shadow: 0 14px 40px rgba(37,99,235,.20);
            color: white;
        }

        .am-btn:hover { filter: brightness(1.05); color: white; }

        .am-btn-outline {
            padding: .85rem 1rem;
            border-radius: 14px;
            font-weight: 700;
            border: 1px solid rgba(255,255,255,.16);
            background: rgba(255,255,255,.06);
            color: rgba(226,232,240,.92);
        }

        .am-btn-outline:hover { background: rgba(255,255,255,.10); color: rgba(226,232,240,1); }

        .am-divider {
            position: relative;
            text-align: center;
            opacity: .8;
            font-size: .9rem;
        }
        .am-divider::before, .am-divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 38%;
            height: 1px;
            background: rgba(255,255,255,.14);
        }
        .am-divider::before { left: 0; }
        .am-divider::after { right: 0; }
        .am-divider span { padding: 0 .5rem; }
    </style>
}
